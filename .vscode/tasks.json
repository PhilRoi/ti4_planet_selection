{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "configure",
            "type": "shell",
            "command": "${workspaceRoot}/cpp/bootstrap.sh",
            "options": {
                "cwd": "${workspaceRoot}/cpp"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "build release",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}/cpp/release"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build debug",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}/cpp/debug"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build rel_with_debug",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}/cpp/rel_with_debug"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "valgrind",
            "type": "shell",
            "command": "valgrind",
            "options": {
                "cwd": "${workspaceRoot}/cpp/debug"
            },
            "args": [
                "--leak-check=full",
                "--show-reachable=yes",
                "--track-origins=yes",
                "${workspaceRoot}/cpp/debug/ti4_planet_selection",
                "4"
            ],
            "problemMatcher": []
        }
    ]
}